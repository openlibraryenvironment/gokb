node {
  jdk = tool name: 'OracleJava8'
  env.JAVA_HOME = "${jdk}"

  stage('Test') {
    checkout scm
    dir ('server/gokbg3') {
      sh './gradlew --no-daemon --console plain test'
    }
  }

  stage('Build') {
    dir ('server/gokbg3') {
      sh './gradlew --no-daemon --console plain war'
    }
  }

  stage('Deploy') {
     dir ('server/gokbg3') {
        sh 'echo ${GIT_COMMIT}, ${BUILD_NUMBER}'
        sh 'cp build/libs/gokbg3*.war /opt/laser/apache-tomcat/default/webapps/gokb_${GIT_COMMIT}.war.bak'
     }
  }
}

node {
  jdk = tool name: 'OracleJava8'
  env.JAVA_HOME = "${jdk}"

  stage('Test') {
    checkout scm
    dir ('server/gokbg3') {
      sh './gradlew --no-daemon --console plain clean test'
    }
  }

  stage('Build') {
    dir ('server/gokbg3') {
      sh './gradlew --no-daemon --console plain clean war'
    }
  }
}

{
  "settings": {
    "number_of_shards": 1,
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type":     "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "autocomplete": {
          "type":      "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        },
        "url": {
          "type":      "custom",
          "tokenizer": "url_tokenizer",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        }
      },
      "tokenizer": {
        "url_tokenizer": {
          "type": "simple_pattern",
          "pattern": "[\\w]{6,}"
        }
      }
    }
  }
}
